pipeline {
    agent any

    tools {
        maven 'Maven 3.9.9' // Ensure this matches the Maven version configured in Jenkins
    }

    stages {
        stage('Checkout SCM') {
            steps {
                checkout scm
            }
        }

        stage('Build') {
            steps {
                echo 'Building the microservice...'
                dir('Microservices/clients_service') { // Change to the directory containing pom.xml
                    sh 'mvn clean package -DskipTests' // Skip tests during the build
                }
            }
        }

        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('SonarServer') { // Use the name configured in Jenkins
                    sh 'mvn sonar:sonar -Dsonar.host.url=http://13.53.84.227:9000/ -Dsonar.login=Sqa_1edd27e4ad72c8e103459f7a0eab4c058d3345ac'
                }
            }
        }
    }
}